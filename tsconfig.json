{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "baseUrl": "./", // root of your "paths" below. Required if "paths" is defined
    "paths": {
      "@components/*": ["src/components/*"], // enables us to use @components/MyComponent
      "@data/*": ["src/data/*"], // enables us to use @data/myData.js
      "@assets/*": ["src/assets/*"], // enables us to use @assets/myImage
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json", "composite": true }]
}
